language = "deno"
entrypoint = "src/mod.ts"
run = "deno run -A -c deno.json mod.ts"

[languages.deno]
pattern = "**/*.{ts,tsx}"

[languages.deno.languageServer]
start = "deno lsp"

[languages.deno.languageServer.initializationOptions]
enable = true
lint = true
config = "deno.json"

[env]
DENO_DIR = "/home/runner/${REPL_SLUG}/.deno"

[nix]
channel = "stable-23_05"
